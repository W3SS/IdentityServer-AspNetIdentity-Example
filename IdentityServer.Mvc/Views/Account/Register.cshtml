@model IdentityServer.Data.Models.UserRegistrationModel
@{
    ViewBag.Title = "Register New User";
}

<h2>Registration Form</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="Email">Email</label>
        @Html.TextBoxFor(x => x.Email, new { type = "email", placeholder= "Enter your email", @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Password">Repeat Password</label>
        @Html.PasswordFor(x => x.RepeatPassword, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="FirstName">First Name</label>
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        @Html.TextBoxFor(x => x.LastName, new {@class = "form-control"})
    </div>

    if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary(false)
        </div>
    }
    
    <div class="form-group">
        <button class="btn btn-primary">Register</button>
    </div>
}